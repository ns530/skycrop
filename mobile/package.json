{
  "name": "skycrop-mobile",
  "version": "0.1.0",
  "private": true,
  "description": "SkyCrop Mobile - React Native app for paddy field management",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "clean": "cd android && ./gradlew clean && cd ../ios && xcodebuild clean",
    "clean:cache": "watchman watch-del-all && rm -rf $TMPDIR/react-* && rm -rf node_modules && npm install",
    "pod-install": "cd ios && pod install",
    "prepare": "cd .. && husky mobile/.husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@notifee/react-native": "^7.8.2",
    "@react-native-async-storage/async-storage": "^1.24.0",
    "@react-native-community/geolocation": "^3.4.0",
    "@react-native-firebase/analytics": "^20.4.0",
    "@react-native-firebase/app": "^20.4.0",
    "@react-native-firebase/messaging": "^20.4.0",
    "@react-navigation/bottom-tabs": "^6.6.1",
    "@react-navigation/drawer": "^6.7.2",
    "@react-navigation/native": "^6.1.18",
    "@react-navigation/stack": "^6.4.1",
    "@tanstack/react-query": "^5.59.0",
    "axios": "^1.7.7",
    "date-fns": "^3.6.0",
    "react": "18.3.1",
    "react-native": "0.74.5",
    "react-native-chart-kit": "^6.12.0",
    "react-native-geolocation-service": "^5.3.1",
    "react-native-gesture-handler": "^2.18.1",
    "react-native-keychain": "^8.2.0",
    "react-native-maps": "^1.26.0",
    "react-native-mmkv": "^2.12.2",
    "react-native-reanimated": "^3.15.1",
    "react-native-safe-area-context": "^4.10.9",
    "react-native-screens": "^3.34.0",
    "react-native-svg": "^15.6.0",
    "react-native-vector-icons": "^10.1.0",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native/babel-preset": "^0.74.87",
    "@react-native/eslint-config": "^0.74.87",
    "@react-native/metro-config": "^0.74.87",
    "@react-native/typescript-config": "^0.74.87",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.3.3",
    "@types/geojson": "^7946.0.16",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.3.4",
    "@types/react-native-vector-icons": "^6.4.18",
    "@types/react-test-renderer": "^18.3.0",
    "babel-jest": "^29.7.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.3.3",
    "react-test-renderer": "18.3.1",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20"
  }
}
