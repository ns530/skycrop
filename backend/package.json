{
  "name": "skycrop-backend",
  "version": "0.1.0",
  "private": true,
  "description": "SkyCrop Backend API (Modular Monolith) - Node.js/Express",
  "main": "src/server.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon --env-file .env src/server.js",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,json,md,yml,yaml}\"",
    "test": "jest --config jest.config.js --runInBand",
    "test:coverage": "jest --config jest.config.js --coverage --runInBand",
    "smoke-test": "bash scripts/smoke-tests.sh",
    "monitor": "bash scripts/monitor-deployment.sh",
    "rollback": "bash scripts/rollback.sh",
    "blue-green-deploy": "bash scripts/blue-green-deploy.sh",
    "canary-deploy": "bash scripts/canary-deploy.sh"
  },
  "dependencies": {
    "@sentry/node": "^7.114.0",
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-cron": "^4.2.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.12.0",
    "pg-hstore": "^2.3.4",
    "redis": "^4.6.14",
    "sequelize": "^6.37.3",
    "socket.io": "^4.8.1",
    "uuid": "^9.0.1",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.6",
    "jest": "^30.2.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ]
  }
}
