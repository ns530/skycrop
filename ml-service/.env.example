# ML Service environment template (Sprint 2)
ML_HOST=0.0.0.0
ML_PORT=80
ML_INTERNAL_TOKEN=change-me

# Model defaults
MODEL_NAME=unet
MODEL_VERSION=1.0.0
UNET_DEFAULT_VERSION=1.0.0

# Limits and timeouts
REQUEST_TIMEOUT_S=60
MAX_PAYLOAD_MB=10

# Optional integrations
FIELD_RESOLVER_URL=
LOG_LEVEL=INFO
